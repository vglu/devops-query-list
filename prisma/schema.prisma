// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PatTable {
  patId       String      @id
  pat         String
  dateExp     DateTime?   @default(now())
  ownerId     String
  description String?
  ProjTable   ProjTable[]

  @@unique(fields: [patId, ownerId], name: "PatIdOwnerId")
  @@index([ownerId])
}

model ProjTable {
  projId        String    @id
  org           String?
  project       String?
  query         String?
  url           String?
  patId         PatTable? @relation(fields: [patTablePatId], references: [patId])
  queryName     String?
  ownerId       String
  patTablePatId String?

  @@unique(fields: [projId, ownerId], name: "ProjIdOwnerId")
  @@index([ownerId])
}

model ProjItem {
  id            String @id @default(cuid())
  project       String
  queryName     String
  workItemType  String
  state         String
  assignToName  String
  assignToEmail String
  bodyId        String
  title         String
  priority      String
  severity      String
  topic         String
  lastComment   String
  url           String
  ownerId       String

  @@index([ownerId])
}
